{
  "name": "graphql-server",
  "version": "1.0.0",
  "description": "An express server for graphql",
  "main": "index.js",
  "watch": {
    "start:server": {
      "patterns": [
        "**/*.js"
      ],
      "extensions": [
        "js","ts"
      ],
      "quiet": false
    }
  },
  "scripts": {
    "start": "npm-watch start:server",
    "start:server": "NODE_ENV=development node server.js",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "author": "Fangfanghao@seismic.com",
  "license": "ISC",
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.17.3",
    "express-graphql": "^0.12.0",
    "graphql": "^16.3.0",
    "graphql-import-node": "^0.0.4",
    "@graphql-tools/schema": "^8.3.5",
    "@graphql-tools/utils": "^8.6.5",
    "npm-watch": "^0.11.0"
  }
}