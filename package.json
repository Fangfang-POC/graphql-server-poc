{
  "name": "graphql-server",
  "version": "1.0.0",
  "description": "An express server for graphql",
  "main": "index.js",
  "watch": {
    "express:server": {
      "patterns": [
        "**/*.js"
      ],
      "extensions": "js,ts",
      "quiet": false,
      "ignore": [
        "node_modules/**"
      ]
    },
    "apollo:server": {
      "patterns": [
        "**/*.js"
      ],
      "extensions": "js,ts",
      "quiet": false,
      "ignore": [
        "node_modules/**"
      ]
    }
  },
  "scripts": {
    "start:apollo": "npm-watch apollo:server",
    "apollo:server": "node src/index.js",
    "start:express": "npm-watch express:server",
    "express:server": "NODE_ENV=development node src/server.js"
  },
  "author": "Fangfanghao@seismic.com",
  "license": "ISC",
  "dependencies": {
    "@graphql-tools/schema": "^8.3.5",
    "apollo-server-express": "^3.6.7",
    "apollo-server-core": "^3.6.7",
    "cors": "^2.8.5",
    "express": "^4.17.3",
    "express-graphql": "^0.12.0",
    "graphql": "^16.3.0",
    "graphql-subscriptions": "^2.0.0",
    "graphql-ws": "^5.7.0",
    "npm-watch": "^0.11.0",
    "ws": "^8.5.0"
  }
}